/**index.wxss**/

page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
  background: #fff;
}

.container{
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  /* justify-content: center; */
  box-sizing: border-box;
  padding-top: 150rpx;
}
.logo{
  width: 80%;
  height: 350rpx;
  margin-bottom: 50rpx;
}
.popup{
  position: fixed;
  top:0;
  left:0;
  height:100%;
  width:100%;
  background:rgba(0,0,0,0.5);
  display: flex;
      align-items: center;
      justify-content: center;
}
.popup-view{
  height:50%;
  width:70%;
  background:#ffffff;
  border: 1rpx solid #f8f8f8;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding-bottom:20rpx;
}
.popup-header{
  width:90%;
  height:100rpx;
  /* border: 1rpx solid #f8f8f8; */
  line-height: 100rpx;
   font-weight: 700;
}
.popup-center{
  flex:1;
 line-height: 100rpx;
}
.popup-foot{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  /* border-top: 1rpx solid #000; */
}
.buts{
  width: 40% !important;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0;
  padding: 0;
  border: 1rpx solid #f8f8f8;
}
.buts:nth-child(2){
  background-color: cornflowerblue;
  color: #ffffff;
}
